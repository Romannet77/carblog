-
  var defaultArgs = {
    title: "default title",
    imgUrl: "article.png",
    tags: [
      'Vehicle'
    ],
    info: "Rickie Baroch - June 6, 2019",
    intro: "Sed ut persp. unde...." 
  }
  var defaulttags = ['Vehicle']
mixin article(tags=defaulttags, arguments =defaultArgs)
  .article
    .article--image
      img(src=arguments.image alt=arguments.title)
    .article--text
      .article--tags
        each tag in tags
          .tag=tag
      a(href="/posts/"+arguments._id).article--title #{arguments.title}
      .article--info #{arguments.info} 
      .article--intro=arguments.intro
