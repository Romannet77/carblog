block variables
doctype html
html(lang="uk")
  head
    title text
    meta(charset="utf-8")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" integrity="sha256-h20CPZ0QyXlBuAw7A+KluUYx/3pK+c7lYEpqLTlxjYQ=" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Lato&family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    link(rel="stylesheet" href="/css/site.css")
    <meta name="viewport" content="width=device-width">
    
  body
    include ../components/header.pug
    .wrapper
      .row.m-b-50
        .column.column-laptop-2-3
          .content
            block content
        .column.column-laptop-1-3
          .sidebar
            block sidebar    
      each post in popularPosts.docs
        .small-article
          .small-article--title #{post.title} - #{post.visits}
          .small-article--image
            img(src="/"+post.image alt=post.title)
    include ../components/footer.pug
    .alerts    
    script(src="/js/jquery-3.4.1.min.js")
    script(src="/js/main.pages.js")
